@model ProductViewModel
<div class="form-wrapper">
    <div class="col-md-8">
        <form asp-action="Update" asp-controller="Product" enctype="multipart/form-data">
            <div class="validation" asp-validation-summary="All"></div>
            <input type="hidden" asp-for="ProductId" value="@Model.ProductId" />
            <div class="form-group">
                <label asp-for="Name">Name:</label>
                <input type="text" value="@Model.Name" class="input_form" asp-for="Name" maxlength="15" required />
                <span asp-validation-for="Name" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="Price">Price:</label>
                <input type="number" value="@Model.Price" class="input_form" asp-for="Price" max="10000" min="5" required />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description">Description:</label>
                <textarea asp-for="Description" maxlength="300" class="input_form" required>@Model.Description</textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="PhotoLink" value="@Model.PhotoLink" />
                <label for="photoFile">Photo:</label>
                <input type="file" id="photoFile" class="input_form" name="photoFile" accept="image/png, image/jpeg, image/jpg" />
            </div>
            <input class="btn-primary btn-send" type="submit" value="Update" />
        </form>
    </div>
</div>
