@model RegisterViewModel
@inject IViewLocalizer Loc
@{
    ViewData["Title"] = Loc["Register"];
}
<div class="form-wrapper">
    <div class="col-md-4">
        <form asp-action="Register" asp-controller="Account">
            <div class="validation" asp-validation-summary="All"></div>
            <div class="form-group">
                <label class="text_label" asp-for="Email">@Loc["Enter email:"]</label>
                <input type="text" class="input_form" asp-for="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="text_label" asp-for="Name">@Loc["Enter name:"]</label>
                <input type="text" class="input_form" asp-for="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="text_label" asp-for="Password">@Loc["Enter password:"]</label>
                <input type="password" class="input_form" asp-for="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="text_label" asp-for="PasswordConfirm">@Loc["Confirm password:"]</label>
                <input type="password" class="input_form" asp-for="PasswordConfirm" />
                <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
            </div>
            <input class="btn-primary btn-send" type="submit" value="@Loc["Register"]" />
        </form>
    </div>
</div>

