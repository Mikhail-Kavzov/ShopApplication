@model LoginViewModel
<div class="form-wrapper">
    <div class=" col-md-4">
        <form asp-action="Login" asp-controller="Account">
            <div class="validation" asp-validation-summary="All"></div>
            <div class="form-group">
                <label class="text_label" asp-for="Email">Enter email:</label>
                <input type="text" class="input_form" asp-for="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="text_label">Enter password:</label>
                <input type="password" class="input_form" asp-for="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RememberMe" class="text_label">Remember:</label>
                <input type="checkbox" asp-for="RememberMe" />
            </div>
            <input class="btn-primary btn-send" type="submit" value="Login" />
        </form>
    </div>
</div>
