@model LoginViewModel
@inject IViewLocalizer Loc
@{
    ViewData["Title"] = Loc["Login"];
}
<div class="form-wrapper">
    <div class=" col-md-4">
        <form asp-action="Login" asp-controller="Account">
            <div class="validation" asp-validation-summary="All"></div>
            <div class="form-group">
                <label class="text_label" asp-for="Name">@Loc["Enter name:"]</label>
                <input type="text" class="input_form" asp-for="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="text_label">@Loc["Enter password:"]</label>
                <input type="password" class="input_form" asp-for="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RememberMe" class="text_label">@Loc["Remember:"]</label>
                <input type="checkbox" asp-for="RememberMe" />
            </div>
            <input class="btn-primary btn-send" type="submit" value="@Loc["Login"]" />
        </form>
    </div>
</div>
