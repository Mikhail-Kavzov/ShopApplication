@model LoginViewModel
<div class="formWrapper">
    <form asp-action="Login" asp-controller="Account">
        <div class="form-group">
            <label asp-for="Email">Enter email:</label>
            <input type="text" asp-for="Email" />
        </div>
        <div class="form-group">
            <label asp-for="Password">Enter password:</label>
            <input type="text" asp-for="Password" />
        </div>
        <div class="form-group">
            <label asp-for="RememberMe" >Remember</label>
            <input type="checkbox" asp-for="RememberMe" />
        </div>
        <input class="btn-primary" type="submit" value="Login" />
    </form>
</div>
